{% extends 'base.html.twig' %}

{% block body %}
  <div class="columns is-mobile is-centered">
    <div class="card is-parent has-text-centered">
      <header class="card-header">
        <p class="card-header-title">
          Mesero(a) - {{ app.user.name ~ ' ' ~ app.user.firstLastName }}
        </p>
        <a class="card-header-icon" href="{{ path('fos_user_security_logout') }}">
          <span class="icon">
            <i class="fa fa-power-off"></i>
		  </span>
        </a>
      </header>
      <div class="card-content">
        <p class="title">Cuentas</p>
        <div class="content">
          <form>
            <account-form></account-form>
            <div class="field" style="margin-top: 20px;">
              <button class="button is-info" @click.prevent="createAccount">
                <span class="icon is-normal">
                  <i class="fa fa-save"></i>
                </span>
                <span>Crear Cuenta</span>
              </button>
              <button class="button" @click.prevent="cleanForm">
				<span class="icon is-normal">
				  <i class="fa fa-remove"></i>
				</span>
                <span>Cancelar</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/accounts/app.js') }}"></script>
{% endblock %}